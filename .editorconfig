# http://editorconfig.org

root = true

# Default - all files
[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

# JavaScript files
[*.{js,ts,tsx}]
indent_size = 2

# JSON
[*.json]
indent_size = 2
insert_final_newline = ignore

# Yaml
[*.{yml,yaml}]
indent_size = 2

# Makefiles
[{Makefile,**.mk}]
indent_style = tab

# Windows files
[*.bat]
end_of_line = crlf
